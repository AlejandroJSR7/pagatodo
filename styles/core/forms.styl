.form
  input
    color #b3b3b3
    display block
    font-family 'ArialNarrow'
    font-size 13px
    font-weight normal
    line-height 1em
    margin 2px 0
    padding 15px 13px
    width 100%
  .custom-select
    margin 0
    width 100%
    &:after
      right 20px
    select
      font-size 15px
      padding 12px
      width 105%
  .btn
    background c_white
    color c_gray2
    cursor pointer
    font-family 'MontserratBold'
    font-size 14px
    padding 10px 40px
    transition all 0.7s ease-in
    width auto
    &:hover
      background c_red6
      border-color c_red6
      color c_white
  &-field
    margin-bottom 20px
  &-field-icon
    position relative
    clearfix()
    .icon
      color #858585
      float left
      font-size 35px
      line-height 44px
      margin-right 20px
      text-align center
      width 50px
    input,
    .custom-select
      float right
      width calc(100% - 70px)
      
.oportunidades-form__submit
  height 40px
  position relative
  text-align right
  clearfix()
  .form-field
    color c_gray2
    float left
    margin-left 20px
    margin-right 20px
    margin-top 10px
    padding-left 129px
    .aceptar-terminos
      border none
    input[type="checkbox"]
      border none
      display inline-block
      margin-right 10px
      width inherit
  .btn
    margin-left 20px

