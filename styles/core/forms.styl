.custom-select
  border 1px solid c_gray2
  border-radius 5px
  color c_gray2
  cursor pointer
  display inline-block
  font-family 'ArialNarrow'
  font-size 13px
  font-weight normal
  margin 10px 5px
  overflow hidden
  padding-right 25px
  position relative
  text-transform uppercase
  &:after
    background url('../images/design/icons/custom-select-arrow@2x.png')
    background-position center
    background-repeat no-repeat
    background-size contain
    content " "
    display block
    height 10px
    position absolute
    right 5px
    top 50%
    transform translateY(-50%)
    width 12px
  select
    -webkit-appearance none
    appearance none
    background transparent
    border none
    cursor pointer
    padding-bottom 5px
    padding-left 5px
    padding-top 5px
    width 120%
    
