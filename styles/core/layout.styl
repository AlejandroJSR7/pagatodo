@media all and (max-width window-lg)
  .hidden-lg
    display none !important
    visibility hidden
  
  .visible-lg
    display inherit !important
    visibility visible
  for i in (1..12)
    .halfmd_{i}
      col-width(i)
      float left
      
@media all and (max-width window-md)
  for i in (1..12)
    .lg_{i}
      width 100%

  for i in (1..12)
    .md_{i}
      col-width(i)
      float left
      &.inline-block
        float none
        display inline-block
        vertical-align top
        margin-left -4px
  
  .hidden-md
    display none !important
    visibility hidden
  
  .visible-md
    display inherit !important
    visibility visible
    &.inline
      display inline-block !important

