  .ctrl-nav
    cursor pointer
    display none
    float right
    height 30px
    margin-top 20px
    position absolute
    right 10px
    width 40px
    z-index 1
    clearfix()
    span
      display block
      width 100%
      height 5px
      margin-bottom 5px
      clearfix()
      &:after
        background c_white
        border-radius 10px
        content ''
        display block
        float right
        height 100%
        visibility visible
        width 100%
      &:first-child
        &:after
          transition(all .3s ease .3s)
      &:nth-child(2)
        &:after
          transition(all .3s ease .4s)
      &:nth-child(3)
        &:after
          transition(all .3s ease .5s)
    .close
      display block
      height 100%
      left 0
      opacity 0
      position absolute
      top 0
      transition(all .3s ease .3s)
      width 100%
      &:after
        background c_white
        border-radius 10px
        content ''
        core-options(transform-origin, 0 0)
        display block
        height 5px
        margin-left 7px
        margin-top -31px
        transform(rotate(45deg) scaleX(0))
        transition(all .3s ease .2s)
        width 100%
      &:before
        background c_white
        border-radius 10px
        content ''
        core-options(transform-origin, 0 100%)
        display block
        height 5px
        margin-left 7px
        margin-top 22px
        transform(rotate(-45deg) scaleX(0))
        transition(all .3s ease )
        width 100%
    &.active
      span
        &:after
          width 0px
        &:first-child
          &:after
            transition(width 0.3s cubic-bezier(0.77, 0, 0.175, 1) )
        &:nth-child(2)
          &:after
            transition(width 0.3s cubic-bezier(0.77, 0, 0.175, 1) .1s)
        &:nth-child(3)
          &:after
            transition(width 0.3s cubic-bezier(0.77, 0, 0.175, 1) .2s)
      .close
        opacity 1
        transition(all .3s ease .3s)
        &:after
          transform(rotate(45deg) scaleX(1))
          transition(all 0.3s cubic-bezier(0.77, 0, 0.175, 1) .4s)
        &:before
          transform(rotate(-45deg) scaleX(1))
          transition(all 0.3s cubic-bezier(0.77, 0, 0.175, 1) .5s)
      ~
        .results-cover
          display none !important
